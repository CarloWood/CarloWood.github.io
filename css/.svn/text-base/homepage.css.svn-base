body {
  margin: 16px;
  background-color: white;
  margin-left: 50px;
  margin-right: 50px;
}

div {
  margin: 0;
  padding: 0;
  /* border: 1px solid blue; */
}

span.red {
  color: #b64f48;	/* Lips red */
}

h1#top-header {
  margin: 0;
  padding: 0;
  text-align: center;
  color: #23150a;
}

div.frame table.frame {
  width: 500px;
}

div.header table.frame {
  width: 100%;
}

img#top-right-image {
  float: right;
  margin: 16px 16px 10px 0;
  border: 1px solid black;
  height: 14em;
}

div#poem {
  margin-right: 191px;
  margin-top: 1em;
  white-space: pre;
  text-align: center;
  font-family: sans-serif;
}

div.poem-copyright {
  /* display: none;		/* No need to actually display it: I have copyright anyway. */
  margin: 2em 191px 0 300px;
  font-size: 8pt;
  color: #888888;
  text-align: center;
}

ul {
  margin: 0.5em 0 0 1em;
  padding-left: 0;
  /* border: 1px solid red; */
}

ul.navlist {
  padding: 0 1px 1px;
  margin-left: 0;
  font: bold 12px Verdana, sans-serif;
  background: transparent;
}

ul.navlist li {
  list-style: none;
  margin: 0;
  border-top: 1px solid gray;
  text-align: left;
}

ul.navlist li div {
  display: block;
  padding: 0.25em 0.5em 0.25em 0.75em;
  border-left: 1em solid #cabcb3;
  background: transparent;
}

ul.navlist li div a {
  text-decoration: none;
}

ul.navlist li div a:link, ul.navlist li div a:visited {
  color: #23150a;
}

ul.navlist li div:hover {
  border-color: #b64f48;
  color: #FFF;
  background: #23150a;
}

ul.navlist li div:hover a {
  border-color: #b64f48;
  color: #FFF;
  background: #23150a;
  text-decoration: underline;
}
